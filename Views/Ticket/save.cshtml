@model List<BusReserveSystem.Models.Ticket>
<div class="container">
    <ul class="nav nav-tabs nav-justified">
        @for (int i = 0; i < Model.Count; i++ )
        {
            <li><a data-toggle="tab" href="#Ticket@(i+1)" style ="color:orange">Ticket @(i+1)</a></li>
        }

        </ul>
    <br />
    <br />
    <div class="tab-content">
        
        @for(int i = 0 ; i < Model.Count ; i++)
        {
            <div id="Ticket@(i+1)" class="tab-pane fade">
                <table class="table">
            <tbody style ="border-bottom:none">
                <tr >
                    <td style ="font-size:28px;text-align:right">
                    RoadServices
                        </td>
                </tr>
                <tr>
                    <td style ="font-size:22px;text-align:right">
                    Permit
                        </td>
                </tr>
      <tr>
          <td>
          <b>Ticket ID:</b>
          </td>
          <td>
              RdSrv_@Model.ElementAt(i).Id
          </td>
      </tr>
                <tr>
                    <td>
                        <b>Date:</b>
                    </td>
                    <td>
                        @Model.ElementAt(i).Date
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>Time Slot:</b>
                    </td>
                    <td>
                        @Model.ElementAt(i).TimeSlot
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>Customer CNIC:</b>
                    </td>
                    <td>
                        @Model.ElementAt(i).Reservation.CNIC
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>From:</b>
                    </td>
                    <td>
                        @Model.ElementAt(i).Source
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>To:</b>
                    </td>
                    <td>
                        @Model.ElementAt(i).Destination
                    </td>
                </tr>
                </tbody>
            </table>
                
    </div>
        }
                
        </div>
    </div>



<div class="container" id ="abtus">
  <div class="jumbotron">
    <h1 style ="text-align:center">...Seat(s) Reserved for you...</h1>
      <p>Your Reservation ID is <b>@Model.ElementAt(0).Id</b></p>
    <p>Click on Button below for more Reservations</p>
      <div class="center-block">
              <a href ="../../Bus/bus"><input class ="btn btn-primary" type ="button" value ="Reserve More" /></a>
          </div>
  </div>
       </div>

@{ViewBag.Title = "Seat Reserved";}
