<div class="container" id ="abtus">
  <div class="jumbotron">
    <h1 style ="text-align:center"> Reservation ID: @Model.Id</h1>
</div>
    </div>
<div class="container" id ="d1">
    
    <ul class="nav nav-tabs nav-justified">
        @for (int i = 0; i < Model.Tickets.ToList().Count; i++ )
        {
            <li><a data-toggle="tab" href="#Ticket@(i+1)" style ="color:orange">Ticket @(i+1)</a></li>
        }

        </ul>
    <br />
    <br />
    <div class="tab-content">
        
        @for (int i = 0; i < Model.Tickets.ToList().Count; i++)
        {
            <div id="Ticket@(i+1)" class="tab-pane fade">
                <table class="table">
            <tbody style ="border-bottom:none">
                <tr >
                    <td style ="font-size:28px;text-align:right">
                    RoadServices
                        </td>
                </tr>
                <tr>
                    <td style ="font-size:22px;text-align:right">
                    Permit
                        </td>
                </tr>
      <tr>
          <td>
          <b>Ticket ID:</b>
          </td>
          <td>
              RdSrv_@Model.Tickets.ToList().ElementAt(i).Id
          </td>
      </tr>
                <tr>
                    <td>
                        <b>Date:</b>
                    </td>
                    <td>
                        @Model.Tickets.ToList().ElementAt(i).Date
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>Time Slot:</b>
                    </td>
                    <td>
                        @Model.Tickets.ToList().ElementAt(i).TimeSlot
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>Customer CNIC:</b>
                    </td>
                    <td>
                        @Model.Tickets.ToList().ElementAt(i).Reservation.CNIC
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>From:</b>
                    </td>
                    <td>
                        @Model.Tickets.ToList().ElementAt(i).Source
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>To:</b>
                    </td>
                    <td>
                        @Model.Tickets.ToList().ElementAt(i).Destination
                    </td>
                </tr>
                </tbody>
            </table>
                
    </div>
        }
                
        </div>
    </div>


